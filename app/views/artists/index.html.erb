<h1>Artists</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Country</th>
    <th colspan="2"></th>
  </tr>
  </thead>

  <tbody>
  <% @artists.each do |artist| %>
    <tr>
      <td><%= artist.name %></td>
      <td><%= artist.country %></td>
      <td><%= link_to 'Details', artist_path(artist) %></td>
      <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
      <td><%= link_to 'Delete', artist_path(artist), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Artist', new_artist_path %>
