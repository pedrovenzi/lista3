<h1>Songs</h1>

<table>
  <thead>
  <tr>
    <th>Song</th>
    <th>Album</th>
    <th>Genre</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @songs.each do |song| %>
    <tr>
      <td><%= song.name %></td>
      <td><%= song.album.name %></td>
      <td><%= song.genre.name %></td>
      <td><%= link_to 'Details', song_path(song) %></td>
      <td><%= link_to 'Edit', edit_song_path(song) %></td>
      <td><%= link_to 'Delete', song_path(song), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Song', new_song_path %>
